@using DollsWorld.Core.DTOs.Course
@using DollsWorld.DataLayer.Entities.Course

@{
    ViewData["Title"] = "خانه";
}

@section SearchBox
{
    <header>
        <a href="" class="logo"><img src="/images/logo.png"></a>
        <h1> با اساتید مجرب و کارآزموده در خودآموز دنیای عروسک ها </h1>
        <h2> آموزش ببینید ، تجربه کسب کنید و بازار کار شوید </h2>
        <h3> با کمترین هزینه خودت یاد بگیر </h3>
    </header>
    <div class="search-form">
        <form action="/Course" method="get">
            <input type="text" name="filter" id="autFilter" placeholder="چی دوست داری یاد بگیری ؟">
            <button><i class="zmdi zmdi-search"></i></button>
        </form>
    </div>
}
<main id="home-page">
    <div class="container">

        <p>hi</p>
        <section class="terms-items">
            <header>
                <h2> آخرین دوره های دنیای عروسک ها </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">

                <cache expires-after="@TimeSpan.FromMinutes(5)">
                    @await Component.InvokeAsync("LatesCourse")
                </cache>

            </div>
        </section>
        <p>hi</p>

        <hr>

        <section class="terms-items">
            <header>
                <h2> دوره های محبوب دنیای عروسک ها </h2>
                <a href=""> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                @{
                    List<ShowCourseListItemViewModel> popular = ViewBag.PopularCourse as List<ShowCourseListItemViewModel>;
                }
                @if (popular != null)
                {
                    foreach (var item in popular)
                    {
                        <partial name="_BoxCourse" model="@item" />
                    }
                }

            </div>
        </section>
    </div>
</main>

@section Scripts
{
    <script>
        $(document).ready(function() {
            $("#autFilter").autocomplete({
                source: 'api/courseapi/search'
            });
        });
    </script>
}
